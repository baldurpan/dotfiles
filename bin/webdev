#!/bin/bash

# Ask for the administrator password upfront
sudo -v

# Keep-alive: update existing `sudo` time stamp until `.osx` has finished
while true; do sudo -n true; sleep 60; kill -0 "$$" || exit; done 2>/dev/null &

spinner() {
	local msg="$1"
	local pid=$2
	local delay=0.15
	local spinstr='|/-\'
	while [ "$(ps a | awk '{print $1}' | grep $pid)" ]; do
		local temp=${spinstr#?}
		printf "$msg %c " "$spinstr"
		local spinstr=$temp${spinstr%"$temp"}
		sleep $delay
		printf "\r"
	done
	printf  "$msg \e[0;32mDONE\e[00m\n"
}

if [ "$1" == "start" ]; then
	msg="Starting MySQL..."
	sudo launchctl load -w /usr/local/opt/mysql/homebrew.mxcl.mysql.plist & spinner "$msg" $! && \
	msg="Starting Memcached..."
	sudo launchctl load -w /usr/local/opt/memcached/homebrew.mxcl.memcached.plist & spinner "$msg" $! && \
	msg="Starting PHP-FPM..."
	sudo launchctl load -w /usr/local/opt/php56/homebrew.mxcl.php56.plist & spinner "$msg" $! && \
	msg="Starting nginx..."
	sudo launchctl load -w /Library/LaunchDaemons/homebrew.mxcl.nginx.plist & spinner "$msg" $! && \
	msg="Starting dnsmasq..."
	sudo launchctl kickstart system/homebrew.mxcl.dnsmasq & spinner "$msg" $!
elif [ "$1" == "stop" ]; then
	msg="Stopping MySQL..."
	sudo launchctl unload -w /usr/local/opt/mysql/homebrew.mxcl.mysql.plist & spinner "$msg" $! && \
	msg="Stopping Memcached..."
	sudo launchctl unload -w /usr/local/opt/memcached/homebrew.mxcl.memcached.plist & spinner "$msg" $! && \
	msg="Stopping PHP-FPM..."
	sudo launchctl unload -w /usr/local/opt/php56/homebrew.mxcl.php56.plist & spinner "$msg" $!
	msg="Stopping nginx..."
	sudo launchctl unload -w /Library/LaunchDaemons/homebrew.mxcl.nginx.plist & spinner "$msg" $!
elif [ "$1" == "restart" ]; then
	webdev stop
	webdev start
fi
